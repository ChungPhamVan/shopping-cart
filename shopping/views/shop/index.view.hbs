<div class="row d-flex justify-content-around">
    <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3">
        <div id="success" class="alert alert-success {{# if noMessage }}hidden{{/if}}">
            {{ successMsg }}
        </div>
    </div>
</div>


{{# each products }}
    <div class="row d-flex justify-content-around">
        {{# each this }}
            <div class = "col-sm-6 col-md-3 border mt-3 boxCart">
                <div class = "thumbnail mt-2">
                    <img src = {{ this.imagePath }} class="img-responsive" alt = "Generic placeholder thumbnail">
                </div>
                
                <div class = "caption">
                    <h3>{{ this.title }}</h3>
                    <p>{{ this.description }}
                    </p>
                    
                    <div class="clearfix mb-3">
                        <div class="float-left price">$<span>{{ this.price }}</span></div>
                        <a href = "/add-to-cart/{{ this._id }}" class = "btn btn-primary float-right" role = "button">
                            Add to Cart
                        </a> 
                    </div>
                    
                </div>
            </div>
        {{/each}}
    </div>
{{/each}}

